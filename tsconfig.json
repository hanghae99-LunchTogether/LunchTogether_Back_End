{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
